<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnStartCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Captura"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Estado: Detenido"
        android:textSize="16sp"/>

    <!-- Después del tvStatus, agrega esto -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAccessibilityWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFF3E0"
        app:cardCornerRadius="12dp"
        app:strokeColor="#FF9800"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardStatus"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️"
                android:textSize="24sp"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de Accesibilidad"
                    android:textStyle="bold"
                    android:textColor="#E65100"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necesitas activar el permiso"
                    android:textSize="12sp"
                    android:alpha="0.8"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnableAccessibility"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activar"
                android:textColor="#E65100"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>
