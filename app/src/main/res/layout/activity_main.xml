<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL del Servidor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ws://192.168.1.100:8000/ws/stream"
        android:inputType="textUri"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnStartCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶️ Iniciar Streaming"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnStopCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="⏹️ Detener Streaming"
        android:textSize="18sp"
        android:enabled="false"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Estado: Detenido ⏹️"
        android:textSize="16sp"/>

</LinearLayout>